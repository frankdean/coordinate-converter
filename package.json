{
  "name": "convert-coord",
  "version": "0.0.1",
  "description": "Geographical Coordinate Converter",
  "author": {
    "name": "Frank Dean",
    "email": "frankdean@users.noreply.github.com"
  },
  "license": "GPL-3.0+",
  "private": true,
  "keywords": [
    "gps",
    "geolocation",
    "latitude",
    "longitude",
    "coordinate",
    "converter"
  ],
  "devDependencies": {
    "copyfiles": "^2.0.0",
    "cssmin": "^0.4.3",
    "firefox-profile": "^1.0.0",
    "http-server": "^0.11.0",
    "jasmine-core": "^3.1.0",
    "jshint": "^2.9.1",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "^2.0.0",
    "karma-firefox-launcher": "^1.0.0",
    "karma-jasmine": "^1.0.0",
    "karma-junit-reporter": "^1.0.0",
    "karma-safari-launcher": "^1.0.0",
    "mkdirp": "^0.5.1",
    "protractor": "^5.1.1",
    "q": "^1.4.1",
    "rimraf": "^2.5.1",
    "shelljs": "^0.8.2",
    "uglify-js": "^3.4.6"
  },
  "dependencies": {
    "@bower_components/angular": "angular/bower-angular#^1.7.0",
    "@bower_components/angular-animate": "angular/bower-angular-animate#^1.7.0",
    "@bower_components/angular-bootstrap": "angular-ui/bootstrap-bower#^2.2.0",
    "@bower_components/angular-i18n": "angular/bower-angular-i18n#^1.7.0",
    "@bower_components/angular-loader": "angular/bower-angular-loader#^1.7.0",
    "@bower_components/angular-messages": "angular/bower-angular-messages#^1.7.0",
    "@bower_components/angular-mocks": "angular/bower-angular-mocks#^1.7.0",
    "@bower_components/angular-resource": "angular/bower-angular-resource#^1.7.0",
    "@bower_components/angular-route": "angular/bower-angular-route#^1.7.0",
    "@bower_components/bootstrap": "twbs/bootstrap#^3.3.6",
    "@bower_components/html5-boilerplate": "h5bp/html5-boilerplate#^5.3.0",
    "@bower_components/jquery": "jquery/jquery-dist#^3.3.1",
    "@bower_components/open-location-code": "google/open-location-code#^1.0.3",
    "@bower_components/proj4": "proj4js/proj4js#2.4.4"
  },
  "engines": {
    "yarn": ">= 1.0.0"
  },
  "scripts": {
    "postinstall": "node -e \"try { require('fs').symlinkSync(require('path').relative('app', 'node_modules/@bower_components'), 'app/bower_components', 'junction') } catch (e) { }\"",
    "prestart": "yarn install",
    "start": "http-server -a localhost -p 8000 -c-1",
    "pretest": "yarn install",
    "test": "karma start test/karma.conf.js",
    "test-single-run": "karma start test/karma.conf.js  --single-run",
    "preupdate-webdriver": "yarn install",
    "update-webdriver": "webdriver-manager update",
    "_preprotractor": "yarn run update-webdriver",
    "protractor": "protractor test/protractor.conf.js",
    "dist-update-index-async": "node -e \"require('shelljs/global'); sed('-i', /    \\/\\/ You need to run .yarn run update-index-async. to inject the angular async code here/, sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js'), 'dist/app/index-async.html');\"",
    "update-index-async": "node -e \"require('shelljs/global'); sed('-i', /    \\/\\/ You need to run .yarn run update-index-async. to inject the angular async code here/, sed(/sourceMappingURL=angular-loader.min.js.map/,'sourceMappingURL=bower_components/angular-loader/angular-loader.min.js.map','app/bower_components/angular-loader/angular-loader.min.js'), 'app/index-async.html');\"",
    "disable-debug": "node -e \"require('shelljs/global'); sed('-i', /$compileProvider.debugInfoEnabled\\(true\\)/, '$compileProvider.debugInfoEnabled(false)', 'app/js/app.js');\"",
    "enable-debug": "node -e \"require('shelljs/global'); sed('-i', /$compileProvider.debugInfoEnabled\\(false\\)/, '$compileProvider.debugInfoEnabled(true)', 'app/js/app.js');\"",
    "disable-debug-logging": "node -e \"require('shelljs/global'); sed('-i', /$logProvider.debugEnabled\\(true\\)/, '$logProvider.debugEnabled(false)', 'app/js/app.js');\"",
    "enable-debug-logging": "node -e \"require('shelljs/global'); sed('-i', /$logProvider.debugEnabled\\(false\\)/, '$logProvider.debugEnabled(true)', 'app/js/app.js');\"",
    "update-index-prod": "node -e \"require('shelljs/global'); sed('-i', /^\\s+<script src=\\\"js\\/.*\\.js\\\"><\\/script>\\s*$/, '', 'dist/app/index.html'); sed('-i', /^\\s+<!-- <script src=\\\"coord.min.js\\\"><\\/script> -->\\s*$/, '  <script src=\\\"coord.min.js\\\"></script>', 'dist/app/index.html');\"",
    "update-index-async-prod": "node -e \"require('shelljs/global'); sed('-i', /^\\s+\\'js\\/.*\\.js\\',?\\s*$/, '', 'dist/app/index-async.html'); sed('-i', /\\/\\/ \\'coord.min.js\\'/, '\\'coord.min.js\\'', 'dist/app/index-async.html');\"",
    "env": "env",
    "clean": "rimraf dist",
    "lint": "jshint app/js/*.js app/js/**/*.js test/**/*.js",
    "prebuild": "mkdirp dist/app/partials --mode 0775 && mkdirp dist/app/css --mode 0775",
    "build": "yarn run build:scripts && yarn run build:css",
    "build:scripts": "cd dist/app && ../../node_modules/uglify-js/bin/uglifyjs ../../app/js/*.js ../../app/js/**/*.js --compress --mangle --source-map \"filename=coord.min.js.map\" --output coord.min.js",
    "build:css": "cssmin app/css/app.css > dist/app/css/app.css && cssmin app/css/ie10-viewport-bug-workaround.css > dist/app/css/ie10-viewport-bug-workaround.css",
    "dist": "copyfiles 'app/bower_components/**/*.min.js' 'app/bower_components/**/*.min.js.map' 'app/bower_components/angular-i18n/angular-locale_en-gb.js' 'app/bower_components/proj4/dist/*.js' 'app/bower_components/**/*.css' 'app/bower_components/**/*.css.map' 'app/css/*.min.css' 'app/index*.html' 'app/partials/*.html' 'LICENSE.txt' dist; cp 'LICENSE' dist/app/LICENSE.txt",
    "dist-misc": "cp 'LICENSE' dist/app/LICENSE.txt",
    "build-release": "yarn run disable-debug && yarn run disable-debug-logging && yarn run clean && yarn run build && yarn run dist && yarn run update-index-prod && yarn run enable-debug && yarn run enable-debug-logging"
  }
}
